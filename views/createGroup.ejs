<% layout('layout/boilerplate') %>



<form action="/groups/create" method="post" style="margin: 20px 20px 20px 25vw; padding: 5px 5px 5px 5px; width: 50vw; ">

    <!-- <div style=" background-color: white; padding: 10px 10px 10px 10px; box-shadow: 2px 2px 6px rgb(53, 53, 53); border-radius: 7px; padding: 10px 10px 10px 10px; border: 0px;"> -->
        <!-- <label for="groupName" style="margin-left: 15px;"><h4>GroupName</h4></label> -->
        <input type="text" style="margin-left: 0px; width: 100%; height: 40px; border: 2px solid gray; box-shadow: 1px 1px 3px rgb(53, 53, 53); border-radius: 3px; padding: 10px 10px 10px 10px; border: 0px; " name="groupName" id="groupName" placeholder="GroupName" required>
    <!-- </div> -->
    <div style=" background-color: white; padding: 10px 10px 10px 10px; margin-top: 20px; height: 50vh; box-shadow: 2px 2px 6px rgb(53, 53, 53); border-radius: 7px; padding: 10px 10px 10px 10px; border: 0px; overflow: auto;">
        <ul style="margin-top: 20px;">
            <% for(let user of Friends){ %>
                <div style="margin: 5px;">
                    <input type="checkbox" name="users[]" value="<%= user._id %>">
                    <a href="/user/<%=user._id%>"> <b><%= user.username %></b></a>
                </div>
                
            <% } %>
        </ul>
    </div>

    <button class="btn btn-primary" style="margin-top: 20px; box-shadow: 2px 2px 6px rgb(53, 53, 53); border-radius: 7px; padding: 10px 10px 10px 10px; border: 0px;">Create</button>

</form>

